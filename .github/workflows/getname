name: Log Computer Name

on:
  push:
    branches:
      - main  # or any branch you want to trigger this workflow

jobs:
  log-computer-name:
    runs-on: self-hosted  # Use a self-hosted runner

    steps:
      - name: Check out repository
        uses: actions/checkout@v2

      - name: Get Computer Name
        run: |
          echo "Computer Name: $(hostname)"
